<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/reltitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/gradientback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titletext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Close Screen Locker"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reltitle"
        app:layout_constraintBottom_toTopOf="@id/relbutton"
        android:id="@+id/messagetext"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:text="Do You Want to Close App?"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:gravity="center"/>
    <RelativeLayout
        android:id="@+id/relbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/messagetext"
       >


        <RelativeLayout
            android:id="@+id/allowrel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/pinback"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" OK "
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>