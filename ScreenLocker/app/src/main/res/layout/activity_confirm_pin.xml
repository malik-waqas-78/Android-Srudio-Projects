<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="screen.lock.screenlock.ConfirmPin">
    <LinearLayout
        android:id="@+id/LinTopBanner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraintPin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintPin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinTopBanner">
    <RelativeLayout
        android:id="@+id/relt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rel">
    <ImageView
        android:id="@+id/imageviewIcon"
        android:src="@drawable/splashicon"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"

     />
    <TextView
        android:id="@+id/instr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Pin"
        android:layout_below="@id/imageviewIcon"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/pinlinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/pinbac"
        android:layout_below="@id/instr"
        android:layout_margin="10sp"
        android:padding="@dimen/_5sdp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/radio1"
            android:background="@drawable/ic_pindotbackgroundempty"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"/>
        <RelativeLayout
            android:id="@+id/radio2"
            android:background="@drawable/ic_pindotbackgroundempty"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"/>
        <RelativeLayout
            android:id="@+id/radio3"
            android:background="@drawable/ic_pindotbackgroundempty"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"/>
