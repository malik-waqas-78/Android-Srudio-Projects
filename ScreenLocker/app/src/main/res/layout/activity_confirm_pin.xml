    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainsecurity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/LinTopBanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/transparentblack"
        android:visibility="gone">
        <ScrollView
            android:id="@+id/sccroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/dialogback"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp">
        <RelativeLayout
            android:id="@+id/relquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialogback"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/heading"
                android:text="Security Question"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/securityinstr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/securtiyinstrpin"
                android:gravity="center"
                android:layout_below="@id/heading"
                android:layout_marginBottom="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/questiontext"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:layout_below="@id/securityinstr"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"/>
            <EditText
                android:layout_below="@id/questiontext"
                android:id="@+id/answerEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Answer"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/relbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center"
                android:layout_below="@id/answerEdit">
                <RelativeLayout
                    android:id="@+id/submitButtonrel"
                    android:layout_width="@dimen/_125sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pinback"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <!--<RelativeLayout
                    android:id="@+id/raterel"
                    android:layout_width="@dimen/_125sdp"
