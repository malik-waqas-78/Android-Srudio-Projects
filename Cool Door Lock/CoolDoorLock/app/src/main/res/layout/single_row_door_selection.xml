<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_row_card"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_250sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp">

    <ImageView
        android:id="@+id/door_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/selection_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/selection_overlay"
        app:layout_constraintBottom_toBottomOf="@id/door_layout"
        app:layout_constraintEnd_toEndOf="@id/door_layout"
        app:layout_constraintStart_toStartOf="@id/door_layout"
        app:layout_constraintTop_toTopOf="@id/door_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>