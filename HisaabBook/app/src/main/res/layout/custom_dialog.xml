<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_3sdp"
    android:translationZ="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_15sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textInstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filterByInstr"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInstr"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_7sdp">
    <Button
        android:id="@+id/btnByCashIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bycash_in"
        android:textSize="@dimen/_7sdp"
        android:layout_weight=".3"
        android:layout_margin="@dimen/_5sdp"
        />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNone"
                android:text="@string/byNone"
                android:textSize="@dimen/_7sdp"
                android:layout_weight=".3"
                android:layout_margin="@dimen/_5sdp"
                />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnByCashOut"
            android:text="@string/bycash_out"
            android:textSize="@dimen/_7sdp"
            android:layout_weight=".3"
            android:layout_margin="@dimen/_5sdp"
            />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>