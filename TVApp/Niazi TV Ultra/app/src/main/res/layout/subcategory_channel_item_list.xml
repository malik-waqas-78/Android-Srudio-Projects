<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/ll_subchannel_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/img_channel_show"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_channel_layout"
            android:padding="@dimen/_10sdp">

            <com.niazitvpro.official.customview.RalewayBoldTextViewPrimaryDark
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Item"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/tv_channel_name"
                android:textSize="@dimen/_12sdp"/>

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/icon_download"
                android:padding="@dimen/_1sdp"
                android:id="@+id/img_download"/>


        </LinearLayout>

    </LinearLayout>
// Yahan episode ki list ki setting hogi jo without image hai //


</androidx.cardview.widget.CardView>