<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!--<androidx.cardview.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--card_view:cardElevation="5dp"-->
        <!--android:layout_marginBottom="@dimen/_1sdp"-->
        <!--android:id="@+id/ll_card"-->
        <!--card_view:cardPreventCornerOverlap="false"-->
        <!--android:background="@android:color/white">-->

    <LinearLayout
        android:id="@+id/ll_downloded_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@android:color/black">

        <com.niazitvpro.official.utils.RoundRectCornerImageView
            android:id="@+id/imageView_downloaded_item"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:padding="@dimen/_1sdp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:background="@drawable/img_border"
            android:src="@drawable/app_logo"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fileName_downloaded_item"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"/>

            <TextView
                android:id="@+id/fileSize_downloaded_item"
                android:layout_width="match_parent"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_9sdp"/>


        </LinearLayout>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <!--</androidx.cardview.widget.CardView>-->

</LinearLayout>