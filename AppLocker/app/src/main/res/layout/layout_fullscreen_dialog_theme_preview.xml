<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/theme_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_30sdp"
        app:layout_constraintBottom_toTopOf="@id/btn_apply"/>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignTop="@id/theme_view"
        android:layout_alignEnd="@id/theme_view"
        android:layout_marginTop="@dimen/_minus15sdp"
        android:layout_marginEnd="@dimen/_minus15sdp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toEndOf="@id/theme_view"
        app:layout_constraintEnd_toEndOf="@id/theme_view"
        app:layout_constraintTop_toTopOf="@id/theme_view"
        app:layout_constraintBottom_toTopOf="@id/theme_view"/>

    <ImageView
        android:id="@+id/overlay_lock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_20sdp"
        android:layout_centerInParent="true"
        tools:srcCompat="@drawable/pin_preview"
        app:layout_constraintStart_toStartOf="@id/theme_view"
        app:layout_constraintEnd_toEndOf="@id/theme_view"
        app:layout_constraintTop_toTopOf="@id/theme_view"
        app:layout_constraintBottom_toBottomOf="@id/theme_view"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/theme_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/apply"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>