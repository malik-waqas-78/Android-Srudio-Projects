<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_100sdp"
    android:translationZ="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_secret_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/single_secret_image"
                android:layout_width="@dimen/secret_image_width"
                android:layout_height="@dimen/secret_image_height"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/secret_image_margin"
                android:padding="@dimen/secret_image_padding"
                android:src="@drawable/ic_secret_book" />

            <ImageView
                android:id="@+id/single_secret_image_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/secret_selected" />

            <TextView
                android:id="@+id/title_secret_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_secret_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textColor="@color/color_2"
                android:textSize="@dimen/_12sdp"
                tools:text="Favourite Book" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>