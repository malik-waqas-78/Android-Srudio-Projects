<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_add_movies_to_db"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Add Movies to DB"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_search_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/btn_search_movie"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Search For Movies"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_search_actor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_movies_to_db" />

    <Button
        android:id="@+id/btn_search_actor"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Search for Actors"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_search_by_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_movie" />

    <Button
        android:id="@+id/btn_search_by_string"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Search Movie By String"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search_actor" />
</androidx.constraintlayout.widget.ConstraintLayout>